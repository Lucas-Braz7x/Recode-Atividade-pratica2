@model AgenciaViagens.Models.Passagem


<h3>Tem certeza que deseja cancelar esta passagem?</h3>
<div>
    <h4>Passagem: @Html.DisplayFor(model => model.usuario.nome) | @Html.DisplayFor(model => model.viagens.destinoViagem)
    </h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.usuario)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.usuario.nome)
        </dd class>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.viagens)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.viagens.destinoViagem)
        </dd class>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar</a>
    </form>
</div>
