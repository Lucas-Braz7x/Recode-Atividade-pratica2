@model AgenciaViagens.Models.Passagem

@{
    ViewData["Title"] = "Emiss√£o de passagem";
}

<div class="titulo">
    <h4>Passagem: @Html.DisplayFor(modelItem => modelItem.usuario.nome)</h4>
</div>
<hr />
<div class="row text-left">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="usuarioId" class="control-label"></label>
                <select asp-for="usuarioId" class="form-control" asp-items="ViewBag.usuarioId"></select>
                <span asp-validation-for="usuarioId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="viagemId" class="control-label"></label>
                <select asp-for="viagemId" class="form-control" asp-items="ViewBag.viagemId"></select>
                <span asp-validation-for="viagemId" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="id" />
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="text-left">
    <a asp-action="Index">Voltar</a>
</div>
