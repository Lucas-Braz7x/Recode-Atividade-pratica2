@model AgenciaViagens.Models.Usuario

@{
    ViewData["Title"] = "Cadastro";
}

<div class="titulo">
    <h4>Cadastro de Clientes</h4>
</div>

<div class="d-flex justify-content-center row">
    <div class="col-md-4 formulario">

        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group text-left">
                <label asp-for="nome" class="control-label">Nome:</label>
                <input asp-for="nome" placeholder="Nome completo" class="form-control" />
                <span asp-validation-for="nome" class="text-danger"></span>
            </div>
            <div class="form-group text-left">
                <label asp-for="email" class="control-label">Email:</label>
                <input asp-for="email" type="email" placeholder="Digite o seu Email" class="form-control" />
                <span asp-validation-for="email" class="text-danger"></span>
            </div>
            <div class="form-group text-left">
                <label asp-for="telefone" class="control-label">Telefone:</label>
                <input asp-for="telefone" minlength="11" maxlength="12" placeholder="(DDD) xxxxx-xxxx"
                    class="form-control" />
                <span asp-validation-for="telefone" class="text-danger"></span>
            </div>
            <div class="form-group text-left">
                <label asp-for="cpf" class="control-label">CPF:</label>
                <input asp-for="cpf" minlength="11" placeholder="000.000.000-00" class="form-control" />
                <span asp-validation-for="cpf" class="text-danger"></span>
            </div>
            <div class="form-group text-left">
                <label asp-for="idade" class="control-label">Idade:</label>
                <input asp-for="idade" max="120" min="18" placeholder="Digite a sua Idade" class="form-control" />
                <span asp-validation-for="idade" class="text-danger"></span>
            </div>
            <div class="form-group enviar">
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="botao-controlador">
    <a class="nav-link text-dark" aria-describedby="Listar usuários cadastrados" asp-area="" asp-controller="Home"
        asp-action="Index">
        <img src="~/assets/arrow_circle_left.svg" alt="">
    </a>
    <a aria-label="Listar usuários cadastrados" asp-action="Index">
        <img src="~/assets/arrow_circle_right.svg" alt="">
    </a>
</div>